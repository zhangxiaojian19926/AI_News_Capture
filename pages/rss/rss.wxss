.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.input-group {
  display: flex;
  align-items: center;
}

.url-input {
  flex: 1;
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.add-btn {
  width: 160rpx;
  font-size: 28rpx;
  padding: 0;
  line-height: 2.2;
}

.sources-list, .default-sources {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.source-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.source-item:last-child {
  border-bottom: none;
}

.source-info {
  flex: 1;
  overflow: hidden;
}

.source-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}

.source-url {
  font-size: 24rpx;
  color: #999;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.source-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-left: 20rpx;
}

.default-source-list {
  margin-top: 10rpx;
}

.default-source-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.default-source-item:last-child {
  border-bottom: none;
}

.default-source-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}

.default-source-url {
  font-size: 24rpx;
  color: #999;
  display: block;
  word-break: break-all;
  margin-bottom: 10rpx;
}

.copy-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  line-height: 1.5;
  width: auto;
  display: inline-block;
  background-color: #f5f5f5;
  color: #333;
}

.empty-list {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}